<h1>{{title}}</h1>


<form method="post">
   <fieldset>
        <label for="date">Date: </label>
        <input type="date" name="date" id="date" value="{{ today }}" required />
    </fieldset>
    <fieldset>
        <label for="category" class="col-2">
      Category:
        </label>
        <select name="category" id="category">
        {{#each categories}}
          <option>{{this.name}}</option>
        {{/each}}
        </select>
    </fieldset>
    <fieldset>
        <label name="name" id="name">Name: </label>
        <input name="name" id="name"/>
    </fieldset>

      <fieldset>
        <label for="hours">Duration (HH:MM): </label>
        <input type="number" name="hours" id="hours" min="0" required /> :
        <input type="number" name="minutes" id="minutes" min="0" max="59" required />
      </fieldset>

    <fieldset>
        <label for="comment">Comment: </label>
        <textarea name="comment" id="comment" rows="4" cols="50"></textarea>
    </fieldset>

    <button class="offset-3 btn btn-primary">Submit</button>
</form>
<script src="/javascripts/add-scripts.js"></script>
